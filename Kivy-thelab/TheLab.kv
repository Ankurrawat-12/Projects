<WidgetsExamples>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Click here"
        on_press: root.on_button_click()
        disabled: not root.on
    Label:
        text: root.my_text
        font_name: "RESOURCES/fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
    Switch:
        id: my_switch
        active: True
        size_hint: None, 1
        width: "100dp"
        on_active: root.on_switch_active(self)
    Slider:
        id: my_slider
        disabled: not my_switch.active
        orientation: "vertical"
        min: 0
        max: 100
        #on_value: root.on_slider_value(self)
        #value: 50
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(my_slider.value)
            font_name: "RESOURCES/fonts/Lcd.ttf"
            font_size: "40dp"
            color: 1, .5, 1, 1
        ProgressBar:
            max: 100
            value: my_slider.value
    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: "100dp"
        text: "Ankur"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "your name is :- "+ root.text_input_str
        font_size: "20dp"
        color: 1, .5, 1, 1



